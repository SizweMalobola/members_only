<div class="">
    <h1 class="my-4 text-capitalize">Login As An Old Member</h1>
    <%= form_with url: login_path,scope: :session, local:true do |f| %>
        <div class="mb-3">
            <%= f.label :email, class:"form-label" %>
            <%= f.email_field :email, class:'form-control' %>
            <% if false %>   
                <% @user.errors.full_messages_for(:email).each do |msg| %>
                    <div class="text-danger fw-light"><%= msg %></div>
                <% end %>
            <% end %>
        </div>
        <div class="mb-3">
            <%= f.label :password, class:"form-label" %>
            <%= f.password_field :password, class:'form-control' %>
            <% if false %>              
                <% @user.errors.full_messages_for(:password).each do |msg| %>
                    <div class="text-danger fw-light"><%= msg %></div>
                <% end %>
            <% end %>
        </div>
        <div class="mb-3 d-flex justify-content-between align-items-center"><%= f.submit 'login', class:'btn btn-primary' %> <%= link_to 'Signup instead', new_user_path, class:'link text-decoration-none' %></div>
    <% end %>
</div>